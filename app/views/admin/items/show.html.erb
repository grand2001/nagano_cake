<div class="admin-item-show">
 <h3 class="admin-item-show-top bg-light text-center">商品詳細</h3>
</div>
 <div class="flex ml-5">
  <div class="border">
   <% if @item.image.attached? %>
    <%= image_tag @item.image, size: "270x200" %>
   <% else %>
    <%= image_tag 'no_image', size: "270x200" %>
   <% end %>
  </div>
  <div class="ml-5">
   <div class="admin-item-show-th mb-4">商品名</div>
   <div class="admin-item-show-th mb-4">商品説明</div>
   <div class="admin-item-show-th mb-4">ジャンル</div>
   <div>税込価格</div>
  </div>

  <div>
   <div class="mb-4"><%= @item.name %></div>
   <div class="mb-4"><%= @item.introduction %></div>
   <div class="mb-4"><%= @item.genre.name %></div>
   <div class="mb-4"><%= @item.price.to_s(:delimited) %></div>
  </div>
 </div>
 <div class="admin-item-show-link"><%= link_to "編集する", edit_admin_item_path(@item.id), class: 'btn btn-success' %></div>
