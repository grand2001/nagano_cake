<p id="notice"></p>
<% if @item.errors.any? %>
 <div id="error_explanation">
  <ul style="color: red">
   <h3 class="mt-5 ml-5"><%= @item.errors.count %> error prphibited this obj from being saced:</h3>
   <% @item.errors.full_messages.each do |message| %>
    <li class="mt-3 ml-5"><%= message %></li>
   <% end %>
  </ul>
 </div>
<% end %>
<div class="admin-item">
 <h3 class="mb-5 bg-light text-center admin-item-edit">商品編集</h3>

 <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f|  %>
  <div class="admin-item-edit-m">
   <div class="d-flex align-items-center mb-3">
    <div><%= f.label :image , "商品画像", class: "mb-auto admin-item-edit-th" %></div>
    <div><%= f.file_field :image, accept: "image/*" , class: "" %></div>
   </div>

   <div class="d-flex align-items-center mb-3">
    <div><%= f.label :name , "商品名", class: "mb-auto admin-item-edit-th" %></div>
    <div><%= f.text_field :name, class: "admin-item-edit-td" %></div>
   </div>

   <div class="d-flex mb-3">
    <div><%= f.label :introduction , "商品説明", class: "admin-item-edit-th" %></div>
    <div><%= f.text_area :introduction, class: "admin-item-edit-td admin-item-edit-intr" %></div>
   </div>

   <div class="d-flex align-items-center mb-3">
    <div><%= f.label :genre_id , "ジャンル", class: "mb-auto admin-item-edit-th" %></div>
    <div><%= f.collection_select :genre_id, @genres, :id, :name, options = { include_blank:'--選択してください--', required: true}, class: "admin-item-edit-td" %></div>
   </div>

   <div class="d-flex align-items-center mb-3">
    <div><%= f.label :price , "税込価格", class: "mb-auto admin-item-edit-th" %></div>
    <div><%= f.text_field :price, class: "admin-item-edit-td" %>円</div>
   </div>

   <div class="d-flex align-items-center">
    <div class="d-flex admin-item-edit-th mb-3"></div>
    <div><%= f.submit '変更を保存', class: "btn btn-success px-4 py-2 admin-item-edit-submit" %></div>
   </div>
  </div>
 <% end %>
</div>

