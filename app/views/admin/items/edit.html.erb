<h2>商品編集</h2>
 <table>
  <thead>
   <th>商品画像</th>
   <th>商品名</th>
   <th>商品説明</th>
   <th>ジャンル</th>
   <th>税込価格</th>
  </thead>
  <tbody>
　 <td><%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f|  %></td>
　 <td><%= f.file_field :image, accept: "image/*" %></td>
　 <td><%= f.text_field :name %></td>
　 <td><%= f.text_area :introduction %></td>
　 <td><%= f.collection_select :genre_id, @genres, :id, :name, options = { include_blank:'--選択してください--', required: true} %></td>
　 <td><%= f.text_field :price %></td>
　 <td><%= f.submit '変更を保存' %></td>
　 <% end %>
  </tbody>
 </table>
