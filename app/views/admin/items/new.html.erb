<p id="notice"></p>
<% if @item.errors.any? %>
 <div id="error_explanation">
  <ul style="color: red">
   <h3 class="mt-5 ml-5"><%= @item.errors.count %> error prphibited this obj from being saced:</h3>
   <% @item.errors.full_messages.each do |message| %>
    <li class="mt-3 ml-5"><%= message %></li>
   <% end %>
  </ul>
 </div>
<% end %>
<div class="admin-item-new mb-5">
 <h3 class="admin-item-new-top  bg-light">商品新規登録</h3>
 <div class="admin-item-new-body">
  <%= form_with model: @item,url: admin_items_path do |f| %>
   <div class="d-flex align-items-center mb-3">
    <div><%= f.label :image , "商品画像", class: "mb-auto admin-item-new-th" %></div>
    <div><%= f.file_field :image, accept: "image/*" , class: "admin-item-new-td"%></div>
   </div>

   <div class="d-flex align-items-center mb-3">
    <div><%= f.label :name , "商品名", class: "mb-auto admin-item-new-th" %></div>
    <div><%= f.text_field :name, class: "admin-item-new-td" %></div>
   </div>

   <div class="d-flex mb-3">
    <div><%= f.label :introduction , "商品説明", class: "mb-auto admin-item-new-th" %></div>
    <div><%= f.text_area :introduction, class: "admin-item-new-td admin-item-new-intr" %></div>
   </div>

   <div class="d-flex align-items-center mb-3">
    <div><%= f.label :genre_id , "ジャンル", class: "mb-auto admin-item-new-th" %></div>
    <div><%= f.collection_select :genre_id, @genre, :id, :name, options = { include_blank:'--選択してください--', required: true}, class: "admin-item-new-td" %></div>
   </div>

   <div class="d-flex align-items-center mb-3">
    <div><%= f.label :price , "税込価格", class: "mb-auto admin-item-new-th" %></div>
    <div><%= f.number_field :price, class: "admin-item-new-td" %></div>円
   </div>

   <div>
    <%= f.submit '新規登録', class: "btn btn-success px-4 py-2 admin-item-new-link" %>
   </div>
  <% end %>
 </div>
</div>
