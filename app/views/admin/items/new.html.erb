<h2>商品新規登録</h2>
 <div>
  <p>商品画像</p>
  <p>商品名</p>
  <p>商品説明</p>
  <p>ジャンル</p>
  <p>税込価格</p>
 </div>

 <div>
  <%= form_with model: @item,url: admin_items_path do |f| %>
  <div>
   <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div>
   <%= f.text_field :name %>
  </div>
  <div>
   <%= f.text_area :introduction %>
  </div>
  <div>
   <%= f.collection_select :genre_id, @genre, :id, :name, options = { include_blank:'--選択してください--', required: true} %>
  </div>
  <div>
   <%= f.number_field :price %>円
  </div>
  <div>
   <%= f.submit '新規登録' %>
  </div>
  <% end %>
 </div>
