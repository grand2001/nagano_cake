<div class="admin-order">
 <h3 class="admin-top text-center mb-4 bg-light">注文履歴一覧</h3>
 <table>
  <thead class="border-top border-bottom">
   <tr>
    <th class="bg-light px-2 py-3 admin-index-info">購入日時</th>
    <th class="bg-light px-2 py-3 admin-index-info">購入者</th>
    <th class="bg-light px-2 py-3 admin-index-info">注文個数</th>
   </tr>
  </thead>
  <tbody>
   <% @order.each do |order| %>
    <tr>
     <td class="px-2 py-3 border-bottom admin-index-info">
      <%= link_to admin_order_path(order.id) do %>
       <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
      <% end %>
     </td>
     <td class="px-2 py-3 border-bottom admin-index-info"><%= order.customer.first_name %><%= order.customer.last_name %></td>
     <td class="px-2 py-3 border-bottom admin-index-info">
      <% total = 0 %>
      <% order.order_informations.each do |order_info| %>
       <% total += order_info.amount %>
      <% end %>
       <%= total %>
     </td>
    </tr>
   <% end %>
  </tbody>
 </table>
 <div class="paginatege ml-5 mb-5"><%= paginate @order %></div>
</div>