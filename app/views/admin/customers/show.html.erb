<div class="admin-customer">
 <h2 class="admin-customer-top text-center bg-light"><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細</h2>
 <div class="flex">
  <div class="admin-customer-show-th">
   <div class="px-1 py-3">会員ID</div>
   <div class="px-1 py-3">氏名</div>
   <div class="px-1 py-3">カナ</div>
   <div class="px-1 py-3">郵便番号</div>
   <div class="px-1 py-3">住所</div>
   <div class="px-1 py-3">電話番号</div>
   <div class="px-1 py-3">メールアドレス</div>
   <div class="px-1 py-3">会員ステータス</div>
  </div>
  <div class="admin-customer-show-td">
   <div class="px-1 py-3"><%= @customer.id %></div>
   <div class="px-1 py-3"><%= @customer.first_name %><%= @customer.last_name %></div>
   <div class="px-1 py-3"><%= @customer.first_name_kana %><%= @customer.last_name_kana %></div>
   <div class="px-1 py-3"><%= @customer.postal_code %></div>
   <div class="px-1 py-3"><%= @customer.address %></div>
   <div class="px-1 py-3"><%= @customer.telephone_number %></div>
   <div class="px-1 py-3"><%= @customer.email %></div>
   <% if @customer.is_deleted == true %>
    <div class="px-1 py-3">退会</div>
   <% else %>
    <div class="px-1 py-3">有効</div>
   <% end %>
    <div>
    <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: 'btn btn-success' %>
   </div>
  </div>
 </div>
</div>
