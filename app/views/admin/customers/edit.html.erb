<h2><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h2>

<%= form_with model: @customer, url: customer_path(@customer.id), method: :patch do |f| %>
        <div class="field">
         <%= f.label :name , "氏名" %><br />
         <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
         <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
        </div>

        <div class="field">
         <%= f.label :name_kana , "フリガナ" %><br />
         <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
         <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
        </div>

        <div class="field">
         <%= f.label :postal_code , "郵便番号(ハイフンなし)" %><br />
         <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </div>

        <div class="field">
         <%= f.label :address , "住所" %><br />
         <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>

        <div class="field">
         <%= f.label :telephone_number , "電話番号(ハイフンなし)" %><br />
         <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>

        <div class="field">
         <%= f.label :email , "メールアドレス" %><br />
         <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div>
         <%= f.radio_button :is_deleted, false %>有効
         <%= f.radio_button :is_deleted, true %>退会
        </div>


       <div class="actions">
         <%= f.submit "変更を保存" %>
       </div>
<% end %>