<p id="notice"></p>
<% if @customer.errors.any? %>
 <div id="error_explanation">
  <ul style="color: red">
   <h3 class="mt-5 ml-5"><%= @customer.errors.count %> error prphibited this obj from being saced:</h3>
   <% @customer.errors.full_messages.each do |message| %>
    <li class="mt-3 ml-5"><%= message %></li>
   <% end %>
  </ul>
 </div>
<% end %>
<div class="admin-customer mb-5">
 <h2 class="admin-customer-top text-center bg-light"><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h2>
 <div class="flex p-2">
  <div class="admin-customer-th">会員ID</div>
  <div class="ml-2"><%= @customer.id %></div>
 </div>

 <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
  <div class="field p-2 flex">
   <%= f.label :name , "氏名", class: "admin-customer-th" %>
   <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "mr-4" %>
   <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>

  <div class="field p-2 flex">
   <%= f.label :name_kana , "フリガナ", class: "admin-customer-th" %>
   <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "mr-4" %>
   <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
  </div>

  <div class="field p-2 flex">
   <%= f.label :postal_code , "郵便番号(ハイフンなし)", class: "admin-customer-th" %>
   <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field p-2 flex">
   <%= f.label :address , "住所", class: "admin-customer-th" %>
   <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field p-2 flex">
   <%= f.label :telephone_number , "電話番号(ハイフンなし)", class: "admin-customer-th" %>
   <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>

  <div class="field p-2 flex">
   <%= f.label :email , "メールアドレス", class: "admin-customer-th" %>
   <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field flex p-2 flex">
   <div class="admin-customer-th">会員ステータス</div>
   <div class="ml-3 mr-3"><%= f.radio_button :is_deleted, false %>有効</div>
   <div><%= f.radio_button :is_deleted, true %>退会</div>
  </div>

  <div class="actions flex">
    <div class="admin-customer-th"></div>
    <div class="ml-4 mt-4"><%= f.submit "変更を保存", class: 'btn btn-success' %></div>
  </div>
 <% end %>
</div>