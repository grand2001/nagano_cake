<div class="container">
 <div class="row py-5">
  <div class="col-3">
   <h3 class="bg-light m-0 text-center">管理者ログイン</h3>
  </div>
 </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row field justify-content-center">
   <div class="col-md-2 .ml-md-auto">
    <%= f.label :email, "メールアドレス" %><br />
   </div>
   <div class="col-md-4 .ml-md-auto">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 50, placeholder: "sample@example.com" %>
   </div>
  </div>

  <div class="row field justify-content-center py-3">
   <div class="col-md-2 .ml-md-auto">
    <%= f.label :password, "パスワード" %><br />
   </div>
   <div class="col-md-4 .ml-md-auto">
    <%= f.password_field :password, autocomplete: "current-password", size: 50 %>
   </div>
  </div>

  <div class="row justify-content-center py-5">
   <div class="actions">
    <%= f.submit "ログイン", class: "btn-primary px-5 py-2 border rounded-lg" %>
   </div>
  </div>
<% end %>

<%= render "admin/shared/links" %>
</div>
